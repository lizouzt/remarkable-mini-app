/******* 组件 *******/
.m-share-top {
    background-color: #f9e09e !important;
    border: none !important;
    /* box-shadow: 0 1px 1px #ddd; */
    border-radius: 0;
    border-bottom-left-radius: 16px;
    border-top-left-radius: 16px;
    line-height: 16px;
    padding: 0 5px 2px 6px;
    position: absolute;
    top: 38px;
    right: 0;
    transition: box-shadow .1s ease-in-out;
}

.m-share-top-hover{
    /* box-shadow: 0 0 2px #aaa; */
    opacity: 0.8;
}

.m-share-top mIcon{
    position: relative;
    top: 1px;
}
.m-share-top text{
    font-size: 10px;
    margin-left: 2px;
}

/************ 图片 *************/
.mst-drawer-mask{
    position:fixed;
    top:0;
    left:0;
    right:0;
    bottom:0;
    background:rgba(0, 0, 0, 0.6);
    z-index:900;
    transition:all 0.2s ease-in-out;
    opacity:0;
    visibility:hidden;    
}
.mst-drawer-mask-show{
    opacity:1;
    visibility:visible;
}
.mst-drawer-container{
    position:fixed;
    width:100%;
    box-sizing:border-box;
    left:0;
    right:0;
    bottom:0;
    background:#f7f7f7;
    transform:translate3d(0, 100%, 0);
    transform-origin:center;
    transition:all 0.2s ease-in-out;
    z-index:900;
    visibility:hidden;
}
.mst-drawer-show{
    transform:translate3d(0, 0, 0);
    visibility:visible;
}
.mst-dc-header{
    height: 42px;
    line-height: 42px;
    text-align: right;
    padding: 0 16px;
}
.mst-dc-footer{
    text-align: center;
    padding: 16px 12px;
    position: relative;
    z-index: 3;
}
.mst-dc-fw{
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.mst-dc-footer text{
    color: #999;
    font-size: 10px;
    line-height: 20px;
}
.mst-dc-content{
    position: relative;
}
.mst-dc-image{
    background-color: #fff;
    box-shadow: 0 0 4px #eee;
    /*
    宽高比改这里和share-top的mst-dc-image
    */
    width: 70%;
    left: 15%;
    position: relative;
    top: 0;
}
.mst-dc-image image{
    height: 100%;
    width: 100%;
}
.mst-dc-loading{
    background: rgba(0,0,0,.8);
    border-radius: 6px;
    padding: 20px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 2;
}
.mst-dc-loading text{
    color: #ccc;
    font-size: 12px;
    line-height: 20px;
    margin-top: 4px;
}
.mst-dc-footer .auth-btn{
    margin: 8px;
}

.mst-loader{
    vertical-align:middle;
    margin: 0 auto;
    width:28px;
    height:28px;
    background:0 0;
    border-radius:50%;
    border:2px solid #fff;
    border-color:#fff #fff #fff #2d8cf0;
    animation:mst-loader .8s linear;
    animation-iteration-count:infinite
}
@keyframes mst-loader{
    0%{
        transform:rotate(0)
    }
    100%{
        transform:rotate(360deg)
    }
}